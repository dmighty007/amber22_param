#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

set sander = "${AMBERHOME}/bin/sander.LES"
if( $?TESTsander ) then
   set sander = $TESTsander
endif

if( ! $?DO_PARALLEL ) then
        setenv DO_PARALLEL " "
endif

set output = hef_pimd.out

cat > nmpimd.in <<EOF

leonard jones fluid simulation: PBC

&cntrl
   ipimd = 2
   ntx = 5, irest = 0
   temp0 = 10.0, tempi= 10.0, temp0les = -1.0 !! use single bath for les and non-les regions
   cut = 7.668
   dt = 0.0002, nstlim = 50
   ntt = 4, nchain = 4
   ntpr = 5, ntwr = 5, ntwx = 5
/

EOF

$DO_PARALLEL $sander -O -i nmpimd.in -p hef_les.top -c hef_les.rst -o $output < /dev/null || goto error
../../dacdif $output.save $output
/bin/rm NHC.dat mdcrd mdinfo restrt

exit(0)

error:
echo "  ${0}:  Program error"
exit(1)










