#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

set sander = "${AMBERHOME}/bin/sander.LES"
if( $?TESTsander ) then
   set sander = $TESTsander
endif

if( ! $?DO_PARALLEL ) then
        setenv DO_PARALLEL " "
else
    echo "This test not set up for parallel"
    echo " cannot run in parallel with #residues < #pes"
    exit 0
endif

addles < addles.in > addles.out

set output = nmpimd.out

cat > nmpimd.in <<EOF

SPC/Fw water simulation: single water, no PBC.

&cntrl
  ipimd = 2
  ntb = 0
  cut = 100.0
  temp0  = 300.0,tempi  = 300.0, temp0les = -1.0    !! use single bath for LES and non-LES regions
  ntt = 4, nchain = 4
  dt = 0.0001,  nstlim = 1000
  nscm = 10000000   
  ntpr = 100   
  ntx = 1, irest = 0
/
EOF

$DO_PARALLEL $sander -O -i nmpimd.in -c h2o_les.crd -p h2o_les.top -o $output || goto error

../../dacdif $output.save $output
/bin/rm restrt mdinfo NHC.dat h2o_les.crd h2o_les.top nmpimd.in addles.out
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)









