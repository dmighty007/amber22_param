#!/bin/bash
#######################################################################
#
##   slurm submission script for pmemd.cuda jobs
#
##   copy this script to your working directory, and make edits there
#
########################################################################

JOB=2igd
output=2igd.o
STARTDIR=`pwd`

cat <<EOF2 > $JOB.pbs
#!/bin/bash -f
#SBATCH -N 1
#SBATCH -n 8
#SBATCH -t 10:00
#SBATCH -p main
#SBATCH --export=ALL
#SBATCH -o $JOB-%j.out
#SBATCH -e $JOB-%j.err

cat > mdin <<EOF
4lzt crystal unit cell
 &cntrl
    ntx=1, ntpr=1, ntwx=0, ntwr=0
    ioutfm=0, ntxo=1,
    imin=1, maxcyc=5, ntpr=1,
    irism=1
    cut=9.0
 /
 &rism
    periodic='pme',
    closure='kh',
    buffer=1, grdspc=0.5,0.5,0.5,
    solvcut=9.0,
    verbose=1,
    write_thermo=1,
    npropagate=4,
    mdiis_del=0.7, mdiis_nvec=10, tolerance=1e-10,
    apply_rism_force=1, zerofrc=1,
 /
EOF

DO_PARALLEL="$AMBERHOME/bin/mpirun -np 8 "
TESTsander=$AMBERHOME/bin/sander.MPI

time \$DO_PARALLEL \$TESTsander -O -i mdin -o 2igd.0.5_8.out \
    -p 2igd.parm7 -c 2igd.rst7 \
    -xvv ../xvv/spc-nacl.kh.xvv 

/bin/rm -f mdin mdinfo restrt

EOF2

sbatch $JOB.pbs
