#!/bin/bash

# Check the existence of a test version of the mdgx program
MDGX="${AMBERHOME}/bin/mdgx"
if [ -n "${TESTmdgx}" ] ; then
  MDGX=${TESTmdgx}
  echo "MDGX set to ${MDGX}"
fi

# Write a charge fitting input file
cat > fit.in << EOF
&files
  -p     vALADi.top
  -o     fit.out
&end

&fitq
  resp   ala1.cube   vALADi.top  1.0
  resp   ala2.cube   vALADi.top  1.0
  resp   glu1.cube   vGLUDi.top  1.0
  resp   glu2.cube   vGLUDi.top  1.0
  resp   thr1.cube   vTHRDi.top  1.0
  resp   thr2.cube   vTHRDi.top  1.0
  pnrg          0.0
  flim          0.39
  nfpt          100
  equalq        '(!:ACE,NME) & @O'
  equalq        '(!:ACE,NME) & @N'
  equalq        '(!:ACE,NME) & @C'
  equalq        '(!:ACE,NME) & @H'
  equalq        ':ACE & @HH31,HH32,HH33'
  equalq        ':ACE & @CH3'
  equalq        ':ACE & @C'
  equalq        ':ACE & @O'
  equalq        ':NME & @HH31,HH32,HH33'
  equalq        ':NME & @CH3'
  equalq        ':NME & @N'
  equalq        ':NME & @H'
  equalq        ':ALA & @HB1,HB2,HB3'
  equalq        ':GLU & @HB2,HB3'
  equalq        ':GLU & @HG2,HG3'
  equalq        ':GLU & @OE1,OE2'
  equalq        ':THR & @HG11,HG12,HG13'
  minq          ':NME & @CH3'
  minq          ':ACE & @CH3'
  minq          '@CB'
  minqwt        1.0e-2
  sumq          ':NME'  0.0
  sumq          ':ACE'  0.0
  CFExtension   pdb
  hist          fqpt.dat
  Verbose       0
&end
EOF

# Run the mdgx program
${MDGX} -O -i fit.in

# Analyze the relevant output
grep "^ HH31" fit.out > hydrogenQ.dat

${AMBERHOME}/test/dacdif hydrogenQ.dat.save hydrogenQ.dat
${AMBERHOME}/test/dacdif fqpt.dat.save fqpt.dat
/bin/rm -f fit.in fit.out *.pdb hist.dat
