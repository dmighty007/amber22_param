#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

if( ! $?TESTsander ) set TESTsander = "${AMBERHOME}/bin/sander"

if( ! $?DO_PARALLEL ) then
        setenv DO_PARALLEL " "
endif

cat > gbin <<EOF
short md run no frills cutoff
 &cntrl 
   nstlim = 20,
   ntpr   = 1,  
   cut=15.0, igb=0,
   ntwr=100000, ntwx=1, 
   ntx=5, irest=1, 
   ntc=2, ntf=2, tol=0.000001,
   dt=0.002, ntb=0,
   ibelly=1,
   tempi=300,temp0=300,tautp=.5,
   ntt=0,

   imin=0, maxcyc=10,ncyc=100
 /
Belly atoms
RES 1 20
END
END

EOF

set output = mdout.belly

$DO_PARALLEL $TESTsander -O -i gbin -c inpcrd -o $output < /dev/null || goto error

../dacdif $output.save $output

/bin/rm -f gbin restrt mdinfo mdcrd
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)









