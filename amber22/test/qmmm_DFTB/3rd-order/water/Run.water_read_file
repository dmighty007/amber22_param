#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

set sander = "${AMBERHOME}/bin/sander"
if( $?TESTsander ) then
    set sander = $TESTsander
endif

if( ! $?DO_PARALLEL ) then
    setenv DO_PARALLEL " "
else
    echo "This test not set up for parallel"
    echo "need #nres>#nproc"
    exit 0
endif

../../../check_slko_files.x
if( $status > 0) then
  exit(0)
endif

cat > mdin <<EOF
 1 water only - minimization
 &cntrl
   imin=1, maxcyc=1,ntmin=3,
   ntb=0, cut=99.0,
   ntpr=1,
   igb=0, 
   ifqnt=1,
 /

 &qmmm
   qmmask='@*',
   qm_theory='DFTB' ,
   dftb_3rd_order='scc-dftb-pa.in',
   qmshake=0,
   tight_p_conv=1,
   verbosity=0,
 /
EOF

set output = mdout.read_file

touch dummy
$DO_PARALLEL $sander -O -o $output < dummy || goto error
../../../dacdif -t 1 $output.save $output

/bin/rm -f restrt mdin mdinfo dummy
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)







