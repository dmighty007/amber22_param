#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

if( ! $?TESTsander ) set TESTsander = "${AMBERHOME}/bin/sander"

if( ! $?DO_PARALLEL ) then
        setenv DO_PARALLEL " "
endif

cat > gbin <<EOF
 short xmin minimization
 &cntrl
   ntx=5, irest=1,
   ntc=1, ntf=1, tol=0.0000001, 
   imin=1, maxcyc=20,
   ntpr=1, ntwr=10000, 
   ntmin = 3,
 /
 &lmod
   xmin_verbosity = 1,
 /
 &ewald
   nfft1 = 72, nfft2 = 60, nfft3 = 54,
 /
EOF

set output = mdout.dhfr.xmin

touch dummy
$DO_PARALLEL $TESTsander -O -i gbin -c md12.x -o $output < dummy > /dev/null \
    || goto error

../dacdif $output.save $output
/bin/rm -f gbin restrt mdinfo dummy fort.7
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
