#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

if( ! $?TESTsander ) set TESTsander = "${AMBERHOME}/bin/sander"

#  lmodprmtop prmtop prmtop.lmod || goto error

if( ! $?DO_PARALLEL ) then
        setenv DO_PARALLEL " "
else
  set numprocs=`echo $DO_PARALLEL | awk -f ../numprocs.awk `
  if ( "$numprocs" > 19 ) then
      echo " DO_PARALLEL set to $DO_PARALLEL"
      goto toomany
  else if ( $?MP_PROCS)then
      if ($MP_PROCS > 19)then
#               --- For IBM AIX ---
          echo "    MP_PROCS set to "$MP_PROCS
          goto toomany
      endif
  endif
endif

cat > gbin <<EOF
 test of gen. Born, on a stretch of A-RNA
 &cntrl                                                                        
   ntmin=3, maxcyc=10, drms=0.1,
   nstlim=10, cut=99.0, igb=2, imin=1, saltcon=0.1,
   ntpr=1, ntwr=100000, ntt=0,
   ntx=5, irest=1, 
   ntc=1, ntf=1, tol=0.000001,
   dt=0.001, ntb=0,
 /
 &lmod             
   xmin_method = 'LBFGS'
   lbfgs_memory_depth = 3,
   xmin_verbosity=0
 /
EOF

set output = mdout.gbrna.xmin

$DO_PARALLEL $TESTsander -O -i gbin -p prmtop -c md4.x -o $output || goto error

../dacdif $output.save $output
/bin/rm -f gbin restrt mdinfo prmtop.lmod
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)

toomany:
    echo " too many processors for this test, exiting (Max = 19)"
    echo "============================================================"
    exit(0)










