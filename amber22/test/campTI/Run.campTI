#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

if( ! $?TESTsander ) set TESTsander = "${AMBERHOME}/bin/sander.MPI"

if( ! $?DO_PARALLEL ) then
   echo "This test must be run in parallel - skipping."
   exit(0)
endif

set numgroups = 2
set numprocs  = `$DO_PARALLEL ../numprocs`

if ( "$numprocs" % $numgroups != 0 ) then
   echo "This test requires a multiple of $numgroups processors! " \
        "$numprocs were specified - skipping."
   exit(0)
endif

cat > mdin <<EOF
         morph rpcamp into camp charges and S -> O
 &cntrl
   ntr=0,
   nstlim =10, nscm=2000, ntave=5000,
   ntx=1, irest=0, ntb=2, ntpr=1, tempi=300.0, ig=974651,
   ntp=1, taup=1.0,
   dt=0.001, nrespa=1,
   ntt=1, temp0 = 300., tautp=2.0,
   ntc=2, ntf=2, tol=0.000001,
   ntwr = 10000, ntwx=0,
   icfe=1, clambda=0.5,
   cut=9.0,
 /
EOF

cat > groupfile <<EOF
-O -i mdin -p camp.wat.top   -o camp.p0
-O -i mdin -p rpcamp.wat.top -o camp.p1
EOF

$DO_PARALLEL $TESTsander -ng $numgroups -groupfile groupfile < /dev/null \
    || goto error

../dacdif camp.p0.save camp.p0
../dacdif camp.p1.save camp.p1

/bin/rm -f mdin restrt.00? mdinfo.00? groupfile
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)









