#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

set sander = "${AMBERHOME}/bin/sander"

if( $?TESTsander ) then
   set sander = $TESTsander
endif

if( ! $?DO_PARALLEL ) then
        setenv DO_PARALLEL " "
endif

set output = mdout.ips_sgldg

cat > gbin <<EOF
 check of isotropic periodic sum simulation, ntb=2
 &cntrl
    imin=0, ntx=5, ntpr=1, 
    nscm=5000,iwrap=1,
    ntf=2, ntc=2,
    ntb=1, ntp=0, tautp=5.0, taup=5.0,
    nstlim=10, t=0.0, dt=0.001,
    cut=10.0,
    ntt=3, gamma_ln=1.0,nscm=100,
    irest=1,
    ips=1,
    isgld=1, isgsta=1,isgend=0,tsgavg=0.2,sgft=1.0,sgff=0.3,sgfg=1.0,
    ig=71277,
 /
EOF

touch dummy
$DO_PARALLEL $sander -O -i gbin -o $output < dummy || goto error

../dacdif $output.save $output
/bin/rm -f gbin restrt mdinfo dummy
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
