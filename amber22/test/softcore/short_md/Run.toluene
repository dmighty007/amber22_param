#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented
 
if( ! $?TESTsander ) set TESTsander = "${AMBERHOME}/bin/sander.MPI"
 
if( ! $?DO_PARALLEL ) then
   echo "This test must be run in parallel - skipping."
   exit(0)
endif

set numgroups = 2
set numprocs  = `$DO_PARALLEL ../../numprocs`

if ( "$numprocs" % $numgroups != 0 ) then
   echo "This test requires a multiple of $numgroups processors! " \
        "$numprocs were specified - skipping."
   exit(0)
endif

cat > mdin.0 <<EOF
NPT production
 &cntrl
  imin = 0,	ntx = 5,	irest = 1,
  ntpr = 5,	ntwr = 0,	ntwx = 0, ntxo=1,
  ntf = 1,	ntc = 2,
  ntb = 2,	cut = 9.0,
  nstlim = 20,	dt = 0.002,
  temp0 = 300.0,	ntt = 3,	gamma_ln = 2,
  ntp = 1,	pres0 = 1.0,	taup = 2.0,
  icfe=1,       clambda = 0.50000,
  ifsc=1,       scmask=':1',
  logdvdl=0,
 /
EOF

cat > mdin.1 <<EOF
NPT production
 &cntrl
  imin = 0,	ntx = 5,	irest = 1,
  ntpr = 5,	ntwr = 0,	ntwx = 0, ntxo=1,
  ntf = 1,	ntc = 2,
  ntb = 2,	cut = 9.0,
  nstlim = 20,	dt = 0.002,
  temp0 = 300.0,	ntt = 3,	gamma_ln = 2,
  ntp = 1,	pres0 = 1.0,	taup = 2.0,
  icfe=1,       clambda = 0.50000,
  ifsc=1,       scmask='',
  logdvdl=0,
 /
EOF

cat > groupfile <<EOF
-O -i mdin.0 -o out.0 -p ../prmtop.0 -c ../rst.0 -r restrt.0
-O -i mdin.1 -o out.1 -p ../prmtop.1 -c ../rst.1 -r restrt.1
EOF

$DO_PARALLEL $TESTsander -ng $numgroups -groupfile groupfile < /dev/null \
    || goto error

../../dacdif out.0.save out.0
../../dacdif out.1.save out.1
../../dacdif restrt.0.save restrt.0
../../dacdif restrt.1.save restrt.1

/bin/rm -f mdin.0 mdin.1 mdinfo groupfile
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)









