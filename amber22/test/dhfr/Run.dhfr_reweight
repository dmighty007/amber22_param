#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP TO_BE_DEtermined
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

set sander = "${AMBERHOME}/bin/sander"
if( $?TESTsander ) then
   set sander = $TESTsander
endif

if( ! $?DO_PARALLEL ) then
        setenv DO_PARALLEL " "
endif

set prmtop = "prmtop"
if( $#argv > 0 ) then
   set prmtop = "$1"
endif

set output = mdout.dhfr_reweight

cat > gbin <<EOF
 short md, nve ensemble
 &cntrl
   reweight=1,
   ntx=5, irest=1,
   ntc=2, ntf=2, tol=0.0000001, 
   nstlim=20, ntt=0, 
   ntpr=1, ntwr=10000,
   dt=0.001, vlimit=10.0, ig=71277,
 /
 &ewald
   nfft1 = 72, nfft2 = 60, nfft3 = 54,
 /
EOF

$DO_PARALLEL $sander -O -p $prmtop -i gbin -c traj.dhfr -o $output < /dev/null || goto error

if ( `basename $sander` == "pmemd.mic_offload.MPI" ) then
../dacdif -r 1.0e-7 $output.save $output
else
../dacdif -t 1 $output.save $output
endif
/bin/rm -f gbin restrt mdinfo
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
